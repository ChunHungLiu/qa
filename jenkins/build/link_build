#!/bin/sh

set -eux

thisdir=$(dirname "$0")
branch="$1"
build="$2"
label="$3"

make_link()
{
  local site="$1"
  . "$thisdir/../sites/$site"
  local link="$BUILD_RESULT_DIR/$branch/$label-latest"
  ssh "$BUILD_UPDATE_ACCOUNT" rm -f "$link"
  ssh "$BUILD_UPDATE_ACCOUNT" ln -s "$build" "$link"
}

for site in cam sc blr
do
  make_link "$site"
done
